@model MVCLab1.Models.PricingViewModel

@{
    ViewData["Title"] = "Pricing";
}

<h2>@ViewData["Title"]</h2>

@foreach (var pricing in Model.PricingOptions)
{
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@pricing.PlanName</h5>
        <h6 class="card-subtitle mb-2 text-muted">$@pricing.PlanCost per month</h6>
        <p class="card-text">@pricing.PlanDescription</p>
        <a href="#" class="card-link">Buy Now</a>
    </div>
    </div>
}